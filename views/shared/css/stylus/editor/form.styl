@import 'var'


form
  padding 0 $editorMargin

  legend
    font-weight 300

  div.controls
    margin-bottom 5px

  a.close
    font-size 2em
    line-height 1em
    margin-top -2px
    margin-left 5px

  ul.nav
    margin-top 20px

  h3.head
    font-size 2em
    font-weight 300

  textarea,
  input[type="text"],
  input[type="color"]
    max-width 95%
    width 95%

  select
    width 100%

  div.actions
    margin-top 2.4em

    a
      margin-right 5px
